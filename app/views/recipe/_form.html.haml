.row
  %h2.form-recipe-heading.text-center.col-md-12= content_for(:header)
.row
  .col-md-offset-4.col-md-4
  .form-group.col-md-4
    = f.label :name, class: 'sr-only'
    = f.text_field :name, class: 'form-control', placeholder: 'name', required: true, autofocus: true, id: :first

- @recipe.ingredients.each do |i|
  = render partial: 'recipe/ingredient', locals: { ingredient: i, recipe_form: f }
  .row
    .col
      %i.fa.fa-minus.fa-2x.pull-right{style: 'color:red'}
.row.mt-4.mb-2
  .col
    %i.fa.fa-plus.fa-2x.text-primary.pull-right.top-aligned-row
.form-group.col-md-12.text-center
  = f.submit class: 'btn btn-lg btn-primary'