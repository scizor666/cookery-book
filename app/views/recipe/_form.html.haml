.row
  .col-md-4.col-md-offset-3.container
    = form_for @recipe, url: {action: 'create'}, html: { class: 'form-recipe' } do |f|
      %h2.form-recipe-heading= content_for(:header)
      .form-group
        = f.label :name, class: 'sr-only'
        = f.text_field :name, class: 'form-control', placeholder: 'name', autofocus: true, id: :first

      - @recipe.ingredients.each do |i|
        = render partial: 'recipe/ingredient', locals: { ingredient: i, recipe_form: f }
      .form-group.col-md-12.text-center
        = f.submit 'Add', class: 'btn btn-lg btn-primary col-md-4'